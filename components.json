        "klogs": "kubectl logs deployment/{{ {{ self.name }}-deployment }}",
        "klogsf": "kubectl logs deployment/{{ {{ self.name }}-deployment }} -f",
        "exec": "kubectl exec -it deployment/{{ {{ self.name }}-deployment }} -- bash"
      },
      "dependencies": [
        "traefik"
      ]
